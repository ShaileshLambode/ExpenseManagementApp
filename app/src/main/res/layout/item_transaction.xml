<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/color_card_background_charcoal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTransTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Grocery"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvTransAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="- ₹500"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/expense_red"
                android:layout_marginEnd="8dp"/>

            <ImageButton
                android:id="@+id/btnMoreOptions"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_more"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Options"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">
            
            <TextView
                android:id="@+id/tvTransMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Bank"
                android:textSize="12sp"
                android:background="@drawable/bg_chip"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="?android:attr/textColorPrimary" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvTransDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="12/12/2024"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary" />
        </LinearLayout>

        <!-- Expanded Details -->
        <LinearLayout
            android:id="@+id/llExpandedDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="8dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/colorBackground"
            android:padding="8dp">

             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category: "
                    android:textStyle="bold"
                    android:textSize="12sp"/>
                 <TextView
                     android:id="@+id/tvTransCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Food"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTransMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message: "
                    android:textStyle="bold"
                    android:textSize="12sp"/>
                 <TextView
                     android:id="@+id/tvTransMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Detailed note here..."
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time: "
                    android:textStyle="bold"
                    android:textSize="12sp"/>
                 <TextView
                     android:id="@+id/tvTransFullDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="12/12/2024 10:30 AM"
                    android:textSize="12sp"/>
            </LinearLayout>

             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type: "
                    android:textStyle="bold"
                    android:textSize="12sp"/>
                 <TextView
                     android:id="@+id/tvTransType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="EXPENSE"
                    android:textSize="12sp"/>
            </LinearLayout>

             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance After: "
                    android:textStyle="bold"
                    android:textSize="12sp"/>
                 <TextView
                     android:id="@+id/tvTransBalanceAfter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="₹ 5000"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
